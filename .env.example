# ==================================================
# AI ICP ASSISTANT - ENVIRONMENT VARIABLES
# ==================================================
# Copy this file to .env and fill in your values
# NEVER commit .env file to version control
# ==================================================

# ============ ENVIRONMENT ============
NODE_ENV=development
# Options: development, staging, production

PORT=3001
# Port number for the service

LOG_LEVEL=info
# Options: debug, info, warn, error

# ============ DATABASE ============
# REQUIRED in production
DB_HOST=localhost
DB_PORT=5432
DB_NAME=lad_production
DB_USER=postgres
DB_PASSWORD=your_secure_password_here
DB_SCHEMA=lad_prod
# CRITICAL: Use lad_prod or appropriate schema name, NOT lad_dev

# Database Pool Settings (optional)
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_CONNECTION_TIMEOUT=30000
DB_SSL=false
# Set to 'true' for production with SSL certificates

# Alternative: Database URL (if using connection string)
# DATABASE_URL=postgresql://user:password@host:5432/database

# ============ AI CONFIGURATION ============
# REQUIRED in production
GEMINI_API_KEY=your_gemini_api_key_here
# Get from Google AI Studio: https://makersuite.google.com/app/apikey

AI_MODEL=gemini-pro
# AI model to use (default: gemini-pro)

MAX_TOKENS=2048
# Maximum tokens per request

AI_TEMPERATURE=0.7
# Temperature for AI responses (0.0 - 1.0)

# ============ ICP CONFIGURATION ============
MAX_CONVERSATION_HISTORY=20
# Maximum number of messages to keep in history

DEFAULT_CONVERSATION_TIMEOUT=1800000
# Conversation timeout in milliseconds (default: 30 minutes)

# ============ SECURITY ============
# REQUIRED in production
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long_here
# Generate: openssl rand -base64 32

CORS_ORIGINS=https://app.yourdomain.com,https://admin.yourdomain.com
# REQUIRED in production - Comma-separated list of allowed origins
# NO localhost URLs in production!

# ============ RATE LIMITING ============
RATE_LIMIT_WINDOW=900000
# Rate limit window in milliseconds (default: 15 minutes)

RATE_LIMIT_MAX_REQUESTS=50
# Maximum requests per window

# ============ FEATURE DEPENDENCIES ============
# REQUIRED - Service URLs for other microservices
# NO localhost fallbacks - must be set!
APOLLO_LEADS_SERVICE_URL=https://apollo-leads.yourdomain.com
# URL for Apollo Leads service

CAMPAIGN_SERVICE_URL=https://campaigns.yourdomain.com
# URL for Campaign service

# ============ DEVELOPMENT ONLY ============
# For local development, use localhost URLs:
# APOLLO_LEADS_SERVICE_URL=http://localhost:3002
# CAMPAIGN_SERVICE_URL=http://localhost:3003
# CORS_ORIGINS=http://localhost:3000
